@model MunicipalApplication.Models.Issue
@{
    ViewBag.Title = "Report an Issue";
}


<h2>Report an Issue</h2>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


@using (Html.BeginForm("Submit", "Report", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        @Html.LabelFor(m => m.Location)
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = "e.g. 12 Main St, Cape Town" })
        @Html.ValidationMessageFor(m => m.Location)
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Category)
        @Html.DropDownListFor(m => m.Category, (SelectList)ViewBag.Categories, "-- Choose category --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Category)
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, 5, 60, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>


    <div class="form-group">
        <label>Attach image or document (optional)</label>
        <input type="file" name="attachment" class="form-control-file" />
        <small class="form-text text-muted">Attach photos, PDFs, or relevant documents.</small>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Main Menu</a>
    </div>
}


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}