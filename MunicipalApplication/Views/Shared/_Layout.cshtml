@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Municipal Services</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 70px;
        }

        .engagement-label {
            font-weight: 600;
        }

        .nav-disabled {
            pointer-events: none;
            opacity: 0.6;
        }

        .app-container {
            max-width: 900px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Municipal Services</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Submit", "Report")">Report Issues</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-disabled" href="#">Local Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-disabled" href="#">Service Status</a>
                </li>
            </ul>
            <span class="navbar-text engagement-label">
                Reports: @ViewBag.ReportCount ?? 0
            </span>
        </div>
    </nav>


    <div class="container app-container">
        @RenderBody()
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>